@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />



    <div class="w-full bg-gradient-to-r from-blue-500 to-purple-600 text-white">
        <div class="container mx-auto py-20 px-6">
            <div class="flex flex-col md:flex-row items-center">
                <div class="md:w-1/2 mb-10 md:mb-0">
                    <h1 class="text-4xl md:text-5xl font-bold leading-tight mb-4">Bienvenido a Nuestra Plataforma</h1>
                    <p class="text-xl mb-8">Descubre todo lo que tenemos para ofrecerte en nuestro catálogo de productos y servicios.</p>
                    <button class="bg-white text-blue-600 font-bold py-3 px-6 rounded-lg hover:bg-blue-100 transition duration-300">Explorar Ahora</button>
                </div>
                <div class="md:w-1/2">
                    <img src="/api/placeholder/600/400" alt="Hero Image" class="rounded-lg shadow-xl">
                </div>
            </div>
        </div>
    </div>

    <!-- Separador / Espacio entre secciones -->
    <div class="py-12 bg-white dark:bg-gray-800">
        <div class="container mx-auto px-6">
            <h2 class="text-3xl font-bold text-center mb-8">Nuestros Productos Destacados</h2>
            <p class="text-center max-w-3xl mx-auto mb-10">Explora nuestra selección de productos más populares y encuentra exactamente lo que estás buscando.</p>
        </div>
    </div>


    <div class="container mx-auto">
        <h1 class="text-3xl font-bold text-center mb-8">Autos Populares</h1>

        <!-- Contenedor principal del carrusel de tarjetas -->
        <div class="relative">
            <!-- Botones de navegación para el carrusel principal -->
            <button id="prevCard" class="absolute left-0 top-1/2 -translate-y-1/2 -translate-x-5 bg-white p-2 rounded-full shadow-lg z-10">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
            </button>

            <button id="nextCard" class="absolute right-0 top-1/2 -translate-y-1/2 translate-x-5 bg-white p-2 rounded-full shadow-lg z-10">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
            </button>

            <!-- Carrusel de tarjetas -->
            <div id="cardCarousel" class="card-carousel flex space-x-6 overflow-x-auto pb-4 hide-scrollbar">
                <!-- Tarjeta 1 -->
                <div class="card flex-shrink-0 w-64 bg-white rounded-lg shadow-md overflow-hidden">
                    <div class="relative h-48">
                        <!-- Carrusel de imágenes dentro de la tarjeta -->
                        <div class="image-carousel flex overflow-x-auto h-full hide-scrollbar" id="card1Carousel">
                            <img src="/img/toyota4_1.webp" alt="Imagen 1.1" class="w-full h-full object-cover flex-shrink-0">
                            <img src="/api/placeholder/300/200" alt="Imagen 1.2" class="w-full h-full object-cover flex-shrink-0">
                            <img src="/api/placeholder/300/200" alt="Imagen 1.3" class="w-full h-full object-cover flex-shrink-0">
                        </div>
                        <!-- Controles del carrusel de imágenes -->
                        <div class="absolute bottom-2 left-0 right-0 flex justify-center space-x-2">
                            <button class="w-2 h-2 rounded-full bg-white opacity-60 hover:opacity-100" onclick="scrollToImage('card1Carousel', 0)"></button>
                            <button class="w-2 h-2 rounded-full bg-white opacity-60 hover:opacity-100" onclick="scrollToImage('card1Carousel', 1)"></button>
                            <button class="w-2 h-2 rounded-full bg-white opacity-60 hover:opacity-100" onclick="scrollToImage('card1Carousel', 2)"></button>
                        </div>
                    </div>
                    <div class="p-4">
                        <h3 class="text-lg font-semibold">Tarjeta 1</h3>
