
@{
    ViewData["Title"] = "Index";
}

<h1>Búsqueda de Vehículos</h1>

<fieldset class="row mt-3">
    <form id="search-form" method="post" class="col-md-9 col-12 row">
        <div class="col-3 mb-2">
            <input id="email-input" class="form-control" name="marca" type="text" placeholder="Marca">
        </div>
        <div class="col-9 mb-2">
            <input id="name-input" class="form-control" name="modelo" type="text" placeholder="Modelo">
        </div>
        <div class="col-9 mb-2">
            <input id="name-input" class="form-control" name="año" type="text" placeholder="Año">
        </div>
        <div class="col-3 mb-2">
            <input id="email-input" class="form-control" name="precio" type="number" placeholder="Precio">
        </div>
        <div class="col-9 mb-2">
            <input id="name-input" class="form-control" name="tiposeguro" type="text" placeholder="Estado">
        </div>

    </form>
    <div class="col row">
        <div class="col-6 mb-2">
            <button class="btn btn-primary w-100" onclick="search()">Buscar</button>
        </div>
        <div class="col-6 mb-2">
            <button class="btn btn-danger w-100" onclick="resetForm()">Limpiar</button>
        </div>
    </div>
</fieldset>

<hr>

<div id="datatable-container" class="d-flex justify-content-center w-100"></div>

<script src="~/js/vehiculo.js"></script>